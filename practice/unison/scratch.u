armstrongNumbers.isArmstrongNumber : Nat -> Boolean
armstrongNumbers.isArmstrongNumber number =
  exp = Text.size (toText number)
  toDigits = cases
    n | n < 10 -> [n]
    n -> toDigits (n / 10) :+ (Nat.mod n 10)
  toDigits number |> map (flip Nat.pow exp) 
                  |> List.foldLeft (Nat.+) 0
                  |> Nat.eq number

