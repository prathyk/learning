stopIfTrue : (a -> Boolean) -> a -> {Abort} a
stopIfTrue pred v = if pred v then abort else v

nonEmptyName : Text -> {} Text
nonEmptyName name = 
  Abort.toBug '(stopIfTrue (text -> text === "") name)
